{
  "ConnectionStrings": {
    "IdentityServerDb": "Server=your-server;Database=IdentityServerDb;User Id=your-user;Password=your-password;TrustServerCertificate=True;",
    "Redis": "your-redis-server:6379,password=your-redis-password"
  },
  "UserCache": {
    "ExpirationMinutes": 60
  },
  "ExternalUserApi": {
    "BaseUrl": "https://your-user-api.example.com/",
    "ApiKey": "your-api-key-here",
    "Timeout": 30
  },
  "Certificate": {
    "Type": "File",
    "FilePath": "/path/to/your/certificate.pfx",
    "Password": "your-certificate-password"
  },
  "AllowedOrigins": [
    "https://app1.yourcompany.com",
    "https://app2.yourcompany.com"
  ],
  "PasswordPolicy": {
    "MinLength": 12,
    "RequireUppercase": true,
    "RequireLowercase": true,
    "RequireDigit": true,
    "RequireSpecialChar": true,
    "PasswordExpirationDays": 90
  },
  "AccountLockout": {
    "MaxFailedAttempts": 5,
    "LockoutMinutes": 15
  },
  "AuditLog": {
    "EnableDatabaseLogging": true,
    "RetentionDays": 90
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/identity-server-.log",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "AllowedHosts": "*"
}
