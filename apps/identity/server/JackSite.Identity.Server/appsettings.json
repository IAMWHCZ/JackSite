{
    "ConnectionStrings": {
        "IdentityServerDb": "Server=localhost;Database=IdentityServerDB;User Id=your-user;Password=your-password;TrustServerCertificate=True;",
        "Redis": "your-redis-server:6379,password=your-redis-password"
    },
    "Jwt": {
        "Key": "your-super-secret-key-with-at-least-32-characters",
        "Issuer": "JackSite.Identity.Server",
        "Audience": "JackSite.Clients"
    },
    "UserCache": {
        "ExpirationMinutes": 60
    },
    "ExternalUserApi": {
        "BaseUrl": "https://your-user-api.example.com/",
        "ApiKey": "your-api-key-here",
        "Timeout": 30
    },
    "ExternalUserSync": {
        "IntervalMinutes": 60,
        "BatchSize": 100,
        "Enabled": true
    },
    "Certificate": {
        "Type": "File",
        "FilePath": "/path/to/your/certificate.pfx",
        "Password": "your-certificate-password"
    },
    "AllowedOrigins": [
        "https://app1.yourcompany.com",
        "https://app2.yourcompany.com"
    ],
    "PasswordPolicy": {
        "MinLength": 12,
        "RequireUppercase": true,
        "RequireLowercase": true,
        "RequireDigit": true,
        "RequireSpecialChar": true,
        "PasswordExpirationDays": 90
    },
    "AccountLockout": {
        "MaxFailedAttempts": 5,
        "LockoutMinutes": 15
    },
    "AuditLog": {
        "EnableDatabaseLogging": true,
        "RetentionDays": 90
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "Serilog": {
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "Console"
            },
            {
                "Name": "File",
                "Args": {
                    "path": "logs/identity-server-.log",
                    "rollingInterval": "Day"
                }
            }
        ],
        "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
    },
    "AllowedHosts": "*",
    "Email": {
        "Smtp": {
            "Host": "smtp.example.com",
            "Port": 587,
            "EnableSsl": true,
            "Username": "your-email@example.com",
            "Password": "your-email-password",
            "From": "noreply@yourcompany.com",
            "FromName": "JackSite Identity"
        }
    },
    "SocialLogin": {
        "Google": {
            "Enabled": true,
            "ClientId": "your-google-client-id",
            "ClientSecret": "your-google-client-secret"
        },
        "Microsoft": {
            "Enabled": true,
            "ClientId": "your-microsoft-client-id",
            "ClientSecret": "your-microsoft-client-secret",
            "TenantId": "common"
        },
        "Facebook": {
            "Enabled": true,
            "AppId": "your-facebook-app-id",
            "AppSecret": "your-facebook-app-secret"
        },
        "GitHub": {
            "Enabled": true,
            "ClientId": "your-github-client-id",
            "ClientSecret": "your-github-client-secret"
        }
    }
}
