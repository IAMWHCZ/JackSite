# 生产环境配置
VITE_APP_ENV=production
VITE_APP_NAME=JackSite Authentication System
VITE_APP_VERSION=1.0.0

# API 配置
VITE_API_BASE_URL=https://api.jacksite.com
VITE_API_TIMEOUT=15000

# 认证配置
VITE_AUTH_TOKEN_KEY=jack_auth_token
VITE_AUTH_REFRESH_TOKEN_KEY=jack_refresh_token
VITE_AUTH_TOKEN_EXPIRES_IN=3600000
VITE_AUTH_COOKIE_DOMAIN=.jacksite.com

# 第三方登录配置
VITE_GOOGLE_CLIENT_ID=your_google_client_id_prod
VITE_GITHUB_CLIENT_ID=your_github_client_id_prod

# 调试配置
VITE_DEBUG_MODE=false
VITE_SHOW_DEVTOOLS=false
VITE_LOG_LEVEL=error

# 国际化配置
VITE_DEFAULT_LANGUAGE=zh-CN
VITE_FALLBACK_LANGUAGE=en-US

# 主题配置
VITE_DEFAULT_THEME=system
VITE_THEME_STORAGE_KEY=jack_theme_preference

# 功能开关
VITE_ENABLE_PWA=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true

# 安全配置
VITE_SECURE_COOKIES=true
VITE_SAME_SITE_COOKIES=strict

# 性能配置
VITE_ENABLE_COMPRESSION=true
VITE_CACHE_MAX_AGE=31536000